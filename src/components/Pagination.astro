---
const { page, baseUrl } = Astro.props;
---
{page.lastPage > 1 && (
  <nav class="flex justify-center items-center gap-4 mt-12 mb-8">
    {page.url.prev ? (
      <a href={page.url.prev} class="px-4 py-2 border border-slate-200 rounded-lg text-emerald-600 hover:bg-emerald-50 hover:border-emerald-200 font-medium transition-colors cursor-pointer flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Previous
      </a>
    ) : (
      <span class="px-4 py-2 border border-slate-100 rounded-lg text-slate-300 font-medium flex items-center gap-2 cursor-not-allowed">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Previous
      </span>
    )}

    <div class="text-slate-600 font-medium">
      Page {page.currentPage} of {page.lastPage}
    </div>

    {page.url.next ? (
      <a href={page.url.next} class="px-4 py-2 border border-slate-200 rounded-lg text-emerald-600 hover:bg-emerald-50 hover:border-emerald-200 font-medium transition-colors cursor-pointer flex items-center gap-2">
        Next
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
      </a>
    ) : (
      <span class="px-4 py-2 border border-slate-100 rounded-lg text-slate-300 font-medium flex items-center gap-2 cursor-not-allowed">
        Next
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
      </span>
    )}
  </nav>
)}
