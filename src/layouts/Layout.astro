---
import Navigation from '../components/Navigation.astro';
import WorksheetFilter from '../components/WorksheetFilter.astro';
import Search from '../components/Search.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

const { title, currentLang, currentTag } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
    
    <!-- Simple Analytics -->
    <script type="text/partytown" src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
    <noscript><img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt="" referrerpolicy="no-referrer-when-downgrade" /></noscript>
	</head>
	<body class="bg-slate-50 min-h-screen text-slate-800 font-sans">
    <Navigation currentLang={currentLang} transition:persist />
    
    {currentLang && (
      <div class="bg-white border-b border-slate-100 shadow-sm" transition:persist>
        <div class="container mx-auto max-w-6xl px-4 flex flex-col md:flex-row items-center justify-between gap-4 py-1">
          <div class="flex-grow">
            <WorksheetFilter currentLang={currentLang} currentTag={currentTag} />
          </div>
          <div class="w-full md:w-64">
            <Search />
          </div>
        </div>
      </div>
    )}

    <main class="container mx-auto px-4 py-6 md:py-10 max-w-6xl">


		  <slot />
    </main>
	</body>
</html>

