---
import Layout from '../../../../layouts/Layout.astro';
import { ghostClient } from '../../../../lib/ghost';
import { LANGUAGES, CATEGORY_FILTERS } from '../../../../utils/tags';
import WorksheetFilter from '../../../../components/WorksheetFilter.astro';
import Pagination from '../../../../components/Pagination.astro';
import { downloadGhostAsset } from '../../../../utils/downloadGhostAsset';

export async function getStaticPaths({ paginate }: any) {
  const allPaths: any[] = [];

  for (const langObj of LANGUAGES) {
    const lang = langObj.code;
    let posts: any[] = [];
    try {
      posts = await ghostClient.posts.browse({
          limit: "all",
          filter: `tag:${lang}`,
          include: ['tags']
      });
      posts = await Promise.all(posts.map(async (post: any) => {
        let feature_image = post.feature_image;
        if (feature_image) {
          feature_image = await downloadGhostAsset(feature_image, post.slug);
        }
        return { ...post, feature_image };
      }));
    } catch (e) {
      console.error(`Failed to fetch Ghost posts for ${lang}`, e);
    }
    
    // For each category, filter posts locally
    const filterCategories = CATEGORY_FILTERS.filter(f => f.id !== 'all');
    for (const category of filterCategories) {
        // Find posts that have the exact tag slug
        const filteredPosts = posts.filter(post => 
            post.tags?.some((t: any) => t.slug === category.id)
        );

        const paginated = paginate(filteredPosts, {
          params: { lang, tag: category.id },
          pageSize: 12
        });
        
        allPaths.push(...paginated);
    }
  }

  return allPaths;
}

const { page } = Astro.props as { page: any };
const { lang, tag } = Astro.params;
const posts = page.data;

const titleMap: Record<string, string> = {
  french: 'French',
  german: 'German',
  spanish: 'Spanish',
  english: 'English'
};

const displayLang = titleMap[lang as string] || lang;
const filterLabel = CATEGORY_FILTERS.find(f => f.id === tag)?.label || (tag as string);
---
<Layout title={`Teacher Jake ${filterLabel} - ${displayLang} (Page ${page.currentPage})`} currentLang={lang}>
  <div class="mb-12 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-4 text-emerald-950 tracking-tight capitalize">{displayLang} {filterLabel}</h1>
    <p class="text-lg text-slate-600 max-w-2xl mx-auto">Browse our collection of interactive {displayLang} {(filterLabel as string).toLowerCase()} and language learning activities.</p>
  </div>
  
  <WorksheetFilter currentLang={lang} currentTag={tag} />

  {posts.length === 0 ? (
    <div class="bg-amber-50 text-amber-800 p-6 rounded-xl border border-amber-200 text-center shadow-sm">
      <p class="text-lg font-medium">No {displayLang} {(filterLabel as string).toLowerCase()} found.</p>
      <p class="mt-2 opacity-80">Make sure your Ghost posts have the exact tag "{tag}".</p>
    </div>
  ) : (
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {posts.map((post: any) => (
        <a href={`/worksheet/${post.slug}`} class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-100 flex flex-col items-start gap-4 group">
          {post.feature_image ? (
             <img src={post.feature_image} alt={post.title} class="w-full h-48 object-cover rounded-xl shadow-sm" />
          ) : (
             <div class="w-full h-48 bg-emerald-50 rounded-xl flex items-center justify-center text-emerald-200 shadow-sm">
               <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
             </div>
          )}
          <h2 class="text-xl font-bold text-slate-800 group-hover:text-emerald-600 transition-colors line-clamp-2">{post.title}</h2>
          <p class="text-slate-500 line-clamp-2 text-sm flex-grow">{post.custom_excerpt || post.excerpt}</p>
          <div class="mt-4 pt-4 border-t border-slate-100 w-full flex justify-between items-center">
             <span class="text-emerald-600 font-semibold text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
               Start <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
             </span>
             {post.tags?.some((tagObj: any) => tagObj.name === 'A1' || tagObj.name === 'A2' || tagObj.name === 'B1' || tagObj.name === 'B2') && (
               <span class="bg-emerald-100 text-emerald-800 text-xs px-2 py-1 rounded font-bold">
                 {post.tags.find((tagObj: any) => tagObj.name === 'A1' || tagObj.name === 'A2' || tagObj.name === 'B1' || tagObj.name === 'B2')?.name}
               </span>
             )}
          </div>
        </a>
      ))}
    </div>
  )}

  <Pagination page={page} />
</Layout>
