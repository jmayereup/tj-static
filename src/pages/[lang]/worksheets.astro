---
import Layout from '../../layouts/Layout.astro';
import { LANGUAGES } from '../../utils/tags';
import WorksheetFilter from '../../components/WorksheetFilter.astro';
import { pb } from '../../lib/pocketbase';
import { downloadAsset } from '../../utils/downloadAsset';

export async function getStaticPaths() {
  return LANGUAGES.map(langObj => ({
    params: { lang: langObj.code }
  }));
}

const { lang } = Astro.params;

let worksheets: any[] = [];
try {
    // We fetch all worksheets, we filter them below by language
    const records = await pb.collection('worksheets').getFullList({ sort: '-created' });
    const parsedWorksheets = await Promise.all(records.map(async (record) => {
      let content = record.content;
      if (typeof content === 'string') {
        try { content = JSON.parse(content); } catch(e) {}
      }
      
      const title = record.title || content?.title || 'Untitled';
      let description = content?.readingText || '';
      if (description.startsWith(title)) description = description.substring(title.length).trim();
      description = description.substring(0, 120) + (description.length > 120 ? '...' : '');
      
      let imageUrl = record.image ? pb.files.getURL(record, record.image) : undefined;
      if (imageUrl) {
        imageUrl = await downloadAsset(imageUrl, record.id, record.image);
      }
      
      if (!imageUrl && record.videoUrl) {
        const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
        const match = record.videoUrl?.match(regExp);
        const ytId = (match && match[2].length === 11) ? match[2] : null;
        if (ytId) imageUrl = `https://img.youtube.com/vi/${ytId}/maxresdefault.jpg`;
      }

      return { ...record, title, description, imageUrl, language: record.language || 'English', level: record.level || 'All' };
    }));
    worksheets = parsedWorksheets.filter(ws => ws.language.toLowerCase() === lang);
} catch (e: unknown) {
    if (e instanceof Error) {
        console.warn("Pocketbase is not running or unreachable:", e.message);
    } else {
        console.warn("Pocketbase is not running or unreachable", e);
    }
}

const titleMap: Record<string, string> = {
  french: 'French',
  german: 'German',
  spanish: 'Spanish',
  english: 'English'
};

const displayLang = titleMap[lang as string] || lang;
---
<Layout title={`Teacher Jake Interactive Worksheets - ${displayLang}`} currentLang={lang} currentTag="worksheets">
  <div class="mb-8 text-center pt-4">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-4 text-[#06422f] tracking-tight">{displayLang} Worksheets</h1>
    <p class="text-lg text-[#4a5568] max-w-2xl mx-auto">Browse our collection of interactive {displayLang} apps and digital worksheets.</p>
  </div>

  {worksheets.length === 0 ? (
    <div class="bg-amber-50 text-amber-800 p-6 rounded-xl border border-amber-200 text-center shadow-sm">
      <p class="text-lg font-medium">No interactive worksheets found for {displayLang}.</p>
      <p class="mt-2 opacity-80">Make sure your Pocketbase server is running and has published items with language tag "{displayLang}".</p>
    </div>
  ) : (
    <div class="mb-16">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
        <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
          <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          Interactive Apps
        </h2>
        
        <!-- Tag Filter -->
        <div class="flex gap-2 overflow-x-auto pb-2 md:pb-0 hide-scrollbar" id="pb-tag-filters">
          <button class="filter-btn active px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-emerald-600 text-white shadow-sm" data-filter="all">All</button>
          <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-white text-slate-600 border border-slate-200 hover:border-emerald-300" data-filter="science">Science</button>
          <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-white text-slate-600 border border-slate-200 hover:border-emerald-300" data-filter="video">Video</button>
          <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-white text-slate-600 border border-slate-200 hover:border-emerald-300" data-filter="fable">Fable</button>
        </div>
      </div>
      
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4" id="pb-worksheet-grid" data-pagefind-body transition:name="content-grid">
        {worksheets.map((ws: any) => {
          const mainTag = ws.tags?.[0]?.toLowerCase() || 'general';
          return (
          <a href={`/app/${ws.id}`} data-tags={(ws.tags || []).join(',').toLowerCase()} class="worksheet-card group bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-full">
            <div class="aspect-[16/9] w-full flex-shrink-0 bg-slate-50 loading-pulse flex items-center justify-center overflow-hidden relative rounded-t-2xl border-b border-slate-100">
                {ws.imageUrl ? (
                    <img 
                      src={ws.imageUrl} 
                      alt={ws.title} 
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 rounded-t-2xl" 
                      loading="lazy"
                      decoding="async"
                    />
                ) : (
                    <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                )}
                <div class="absolute bottom-3 right-3 bg-black/60 backdrop-blur-md text-white text-[10px] font-bold px-2.5 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300">
                    {new Date(ws.created).toLocaleDateString()}
                </div>
            </div>
            
            <div class="flex-grow p-4 flex flex-col">
                <div class="flex items-center gap-2 mb-3">
                    {ws.level && ws.level !== 'All' && (
                      <span class="text-[10px] font-black tracking-wider text-emerald-700 uppercase bg-emerald-50 px-2 py-0.5 rounded border border-emerald-100">{(ws.language || 'EN').substring(0, 2)}-{ws.level}</span>
                    )}
                    <div class="flex items-center gap-2">
                        {ws.level && ws.level !== 'All' && <div class="h-1 w-1 rounded-full bg-slate-200"></div>}
                        <span class="text-[10px] text-slate-400 font-medium tracking-wider">#{ws.id.substring(0, 4)}</span>
                    </div>
                </div>
                
                <h3 class="font-extrabold text-blue-600 text-[1.15rem] leading-tight mb-2 group-hover:text-blue-800 transition-colors line-clamp-2 min-h-[3rem]">{ws.title}</h3>
                {ws.description && (
                  <p class="text-slate-500 text-sm leading-relaxed line-clamp-2 mb-0 flex-grow">{ws.description}</p>
                )}
                
                <div class="pt-4 mt-auto border-t border-slate-100 flex items-center justify-between">
                    <span class="text-[11px] font-extrabold tracking-widest text-blue-600 uppercase">Start App</span>
                    <div class="w-8 h-8 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300 shadow-sm group-hover:shadow-md">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                    </div>
                </div>
            </div>
          </a>
        )})}
      </div>
    </div>
  )}

  <script>
    // Client-side tag filtering for Pocketbase Worksheets
    function setupFilters() {
      const filterBtns = document.querySelectorAll('.filter-btn');
      const cards = document.querySelectorAll('.worksheet-card');
      
      if (!filterBtns.length) return;

      filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          // Update active states
          filterBtns.forEach(b => {
            b.classList.remove('bg-emerald-600', 'text-white', 'shadow-sm', 'active');
            b.classList.add('bg-white', 'text-slate-600');
          });
          btn.classList.add('bg-emerald-600', 'text-white', 'shadow-sm', 'active');
          btn.classList.remove('bg-white', 'text-slate-600');
          
          const filter = btn.getAttribute('data-filter') || 'all';
          
          cards.forEach((cardEl) => {
            const card = cardEl as HTMLElement;
            const tags = card.getAttribute('data-tags') || '';
            if (filter === 'all' || tags.includes(filter)) {
              card.style.display = 'flex';
            } else {
              card.style.display = 'none';
            }
          });
        });
      });
    }

    // Runs on initial load and after every View Transition
    document.addEventListener('astro:page-load', setupFilters);
  </script>
</Layout>
