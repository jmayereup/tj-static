---
import Layout from "../../../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { ghostClient } from "../../../../lib/ghost";
import { getAllPosts } from "../../../../lib/ghost-utils";
import { LANGUAGES, getLevelFromTags } from "../../../../utils/tags";
import TagFilter from "../../../../components/TagFilter.astro";
import LevelFilter from "../../../../components/LevelFilter.astro";
import Pagination from "../../../../components/Pagination.astro";
import { downloadGhostAsset } from "../../../../utils/downloadGhostAsset";

export async function getStaticPaths({ paginate }: any) {
  const allPaths: any[] = [];
  const levels = ["a1", "a2", "b1", "b2"];

  for (const langObj of LANGUAGES) {
    const lang = langObj.code;
    let posts: any[] = [];
    try {
      posts = await getAllPosts({
        filter: `tag:${lang}`,
        include: ["tags"],
      });
      posts = await Promise.all(
        posts.map(async (post: any) => {
          let feature_image = post.feature_image;
          return { ...post, feature_image };
        })
      );
    } catch (e) {
      console.error(`Failed to fetch Ghost posts for ${lang}`, e);
    }

    for (const level of levels) {
      const levelPosts = posts.filter(
        (post: any) => getLevelFromTags(post.tags) === level
      );
      const paginated = paginate(levelPosts, {
        params: { lang, level },
        pageSize: 12,
      });

      if (paginated.length === 0) {
        allPaths.push({
          params: { lang, level, page: undefined },
          props: {
            page: {
              data: [],
              start: 0,
              end: 0,
              total: 0,
              currentPage: 1,
              lastPage: 1,
              url: { current: `/${lang}/level/${level}` },
            },
          },
        });
      } else {
        allPaths.push(...paginated);
      }
    }
  }

  return allPaths;
}

const { page } = Astro.props as { page: any };
const { lang, level } = Astro.params;
const posts = page.data || [];

const titleMap: Record<string, string> = {
  french: "French",
  german: "German",
  spanish: "Spanish",
  english: "English",
  thai: "Thai",
};

const displayLang = titleMap[lang as string] || lang;
---

<Layout
  title={`Teacher Jake Worksheets - ${displayLang} ${
    level ? level.toString().toUpperCase() : ""
  } (Page ${page.currentPage})`}
  currentLang={lang}
  description={`Browse our collection of interactive ${displayLang} language learning materials, reading exercises, and quizzes.`}
>
  <div class="px-4">
    <div class="mb-4 text-center pt-4">
    <h1
      class="text-4xl md:text-5xl font-extrabold mb-4 text-[#06422f] tracking-tight capitalize"
    >
      {displayLang} Worksheets
    </h1>
    <p class="text-lg text-[#4a5568] max-w-2xl mx-auto">
      Browse our collection of interactive {displayLang} language learning materials,
      reading exercises, and quizzes.
    </p>
  </div>

  <LevelFilter currentLang={lang as string} currentLevel={level as string} />

  {
    posts.length === 0 ? (
      <div class="bg-amber-50 text-amber-800 p-6 rounded-xl border border-amber-200 text-center shadow-sm">
        <p class="text-lg font-medium">
          No {displayLang} {level?.toString().toUpperCase()} worksheets found.
        </p>
        <p class="mt-2 opacity-80">Check back later for more content.</p>
      </div>
    ) : (
      <div
        class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
        transition:name="content-grid"
      >
        {posts.map((post: any) => {
          const levelTag = post.tags?.find((tag: any) =>
            ["A1", "A2", "B1", "B2"].includes(tag.name)
          );
          return (
            <a
              href={`/gh/${post.slug}`}
              class="group bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-full"
            >
              <div class="aspect-video w-full shrink-0 bg-slate-50 loading-pulse flex items-center justify-center overflow-hidden relative border-b border-slate-100">
                {post.feature_image ? (
                  <Image
                    src={post.feature_image}
                    alt={post.title}
                    width={400}
                    height={225}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                    decoding="async"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-emerald-200">
                    <svg
                      class="w-12 h-12"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                  </div>
                )}
              </div>

              <div class="grow p-5 flex flex-col">
                <div class="flex items-center gap-2 mb-3">
                  {levelTag && (
                    <span class="text-[10px] font-black tracking-wider text-emerald-700 uppercase bg-emerald-50 px-2 py-0.5 rounded border border-emerald-100">
                      {(lang || "").substring(0, 2).toUpperCase()}-
                      {levelTag.name}
                    </span>
                  )}
                  <div class="flex items-center gap-2">
                    {levelTag && (
                      <div class="h-1 w-1 rounded-full bg-slate-200" />
                    )}
                    {(() => {
                      const displayTag = post.tags?.find(
                        (t: any) =>
                          !["A1", "A2", "B1", "B2", lang].includes(t.name) &&
                          !t.name.startsWith("#")
                      );
                      return displayTag ? (
                        <span class="text-[10px] font-black tracking-wider text-emerald-700 uppercase bg-emerald-50 px-2 py-0.5 rounded border border-emerald-100">
                          #{displayTag.name}
                        </span>
                      ) : (
                        <span class="text-[10px] text-slate-400 font-medium tracking-wider uppercase">
                          #{post.slug.substring(0, 4)}
                        </span>
                      );
                    })()}
                  </div>
                </div>
                <div class="min-h-24">
                  <h2 class="font-extrabold text-blue-600 text-[1.15rem] leading-tight mb-2 group-hover:text-blue-800 transition-colors line-clamp-2">
                    {post.title}
                  </h2>
                  <p class="text-slate-500 text-sm leading-relaxed line-clamp-3 mb-0 grow">
                    {post.custom_excerpt || post.excerpt}
                  </p>
                </div>

                <div class="pt-4 mt-auto border-t border-slate-100 flex items-center justify-between">
                  <span class="text-[11px] font-extrabold tracking-widest text-blue-600 uppercase">
                    Start Worksheet
                  </span>
                  <div class="w-8 h-8 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300 shadow-sm group-hover:shadow-md">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                      />
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    )
  }

  <Pagination page={page} />
  </div>
</Layout>
