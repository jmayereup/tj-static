---
import { Image } from 'astro:assets';
import logoImage from '../assets/tj-logo-book.png';
import Layout from '../layouts/Layout.astro';
import { LANGUAGES } from '../utils/tags';

const description = "Welcome to Teacher Jake. Explore our collection of interactive learning apps, digital worksheets, reading exercises, and language quizzes designed for classrooms or home learning.";
---
<Layout 
  title="Teacher Jake - Interactive Learning Materials" 
  description={description}
>
  <div class="max-w-5xl mx-auto px-4 py-12">
    <div class="text-center mb-16 pt-8">
      <Image src={logoImage} alt="TJ Logo" class="h-40 w-auto rounded shadow-inner mx-auto mb-4"/>
      <p class="text-xl text-[#4a5568] max-w-3xl mx-auto leading-relaxed">
        Discover a rich library of digital worksheets, engaging games, and reading exercises.
        Whether you're teaching in a classroom or learning at home, our tools are designed to 
        make language acquisition fun and effective.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4 mb-16">
      {LANGUAGES.map((langObj) => (
        <a href={`/${langObj.code}`} class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 text-center hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col items-center gap-4">
          <div class="w-16 h-16 rounded-full bg-emerald-50 flex items-center justify-center text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-colors duration-300">
             <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path></svg>
          </div>
          <h2 class="text-2xl font-bold text-slate-800 capitalize">{langObj.label}</h2>
          <p class="text-slate-500 text-sm">Explore {langObj.label} worksheets, games, and reading stories.</p>
        </a>
      ))}
    </div>
  </div>
</Layout>
