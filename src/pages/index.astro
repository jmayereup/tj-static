---
import Layout from '../layouts/Layout.astro';
import { ghostClient } from '../lib/ghost';
import { pb } from '../lib/pocketbase';

const lang = 'english'; // Default language

let posts = [];
let worksheets = [];

try {
  posts = await ghostClient.posts.browse({
      limit: "all",
      filter: `tag:${lang}`,
      include: ['tags']
  });
} catch (e) {
  console.error("Failed to fetch Ghost posts", e);
}

try {
    worksheets = await pb.collection('worksheets').getFullList({ sort: '-created' });
} catch (e: unknown) {
    if (e instanceof Error) {
        console.warn("Pocketbase is not running or unreachable:", e.message);
    } else {
        console.warn("Pocketbase is not running or unreachable", e);
    }
}
---
<Layout title="Teacher Jake Worksheets - English" currentLang={lang}>
  <div class="mb-12 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-4 text-emerald-950 tracking-tight">English Worksheets</h1>
    <p class="text-lg text-slate-600 max-w-2xl mx-auto">Browse our collection of interactive English language learning materials, reading exercises, and quizzes.</p>
  </div>
  
  {worksheets.length > 0 && (
    <div class="mb-16">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
        <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
          <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          Interactive Worksheets
        </h2>
        
        <!-- Tag Filter -->
        <div class="flex gap-2 overflow-x-auto pb-2 md:pb-0 hide-scrollbar" id="pb-tag-filters">
          <button class="filter-btn active px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-emerald-600 text-white shadow-sm" data-filter="all">All</button>
          <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-white text-slate-600 border border-slate-200 hover:border-emerald-300" data-filter="science">Science</button>
          <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-white text-slate-600 border border-slate-200 hover:border-emerald-300" data-filter="video">Video</button>
          <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-semibold transition-all bg-white text-slate-600 border border-slate-200 hover:border-emerald-300" data-filter="fable">Fable</button>
        </div>
      </div>
      
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4" id="pb-worksheet-grid">
        {worksheets.map((ws: any) => {
          const mainTag = ws.tags?.[0]?.toLowerCase() || 'general';
          return (
          <a href={`/app/${ws.id}`} data-tags={(ws.tags || []).join(',').toLowerCase()} class="worksheet-card group bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-full">
            <div class="aspect-[16/9] w-full flex-shrink-0 bg-slate-50 flex items-center justify-center overflow-hidden relative rounded-t-2xl border-b border-slate-100">
                {ws.imageUrl ? (
                    <img src={ws.imageUrl} alt={ws.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 rounded-t-2xl" />
                ) : (
                    <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                )}
                <div class="absolute bottom-3 right-3 bg-black/60 backdrop-blur-md text-white text-[10px] font-bold px-2.5 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300">
                    {new Date(ws.created).toLocaleDateString()}
                </div>
            </div>
            
            <div class="flex-grow p-5 flex flex-col">
                <div class="flex items-center gap-2 mb-3">
                    {ws.level && (
                      <span class="text-[10px] font-black tracking-wider text-emerald-700 uppercase bg-emerald-50 px-2 py-0.5 rounded border border-emerald-100">{(ws.language || 'EN').substring(0, 2)}-{ws.level}</span>
                    )}
                    <span class="text-[10px] font-semibold text-slate-400 border border-slate-100 px-2 py-0.5 rounded capitalize">{mainTag}</span>
                </div>
                
                <h3 class="font-extrabold text-blue-600 text-[1.15rem] leading-tight mb-2 group-hover:text-blue-800 transition-colors line-clamp-2">{ws.title}</h3>
                <p class="text-slate-500 text-sm leading-relaxed line-clamp-2 mb-4">{ws.description || ''}</p>
                
                <div class="mt-auto pt-4 border-t border-slate-100 flex items-center justify-between">
                    <span class="text-[11px] font-extrabold tracking-widest text-blue-600 uppercase">Start App</span>
                    <div class="w-8 h-8 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                    </div>
                </div>
            </div>
          </a>
        )})}
      </div>
    </div>
  )}

  <h2 class="text-2xl font-bold mb-6 text-slate-800">Reading & Worksheets</h2>
  
  {posts.length === 0 ? (
    <div class="bg-amber-50 text-amber-800 p-6 rounded-xl border border-amber-200 text-center shadow-sm">
      <p class="text-lg font-medium">No English worksheets found.</p>
      <p class="mt-2 opacity-80">Make sure your Ghost posts have the tag "English". Check your Ghost API Key in .env to ensure connection.</p>
    </div>
  ) : (
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {posts.map(post => (
        <a href={`/worksheet/${post.slug}`} class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-100 flex flex-col items-start gap-4 group">
          {post.feature_image ? (
             <img src={post.feature_image} alt={post.title} class="w-full h-48 object-cover rounded-xl shadow-sm" />
          ) : (
             <div class="w-full h-48 bg-emerald-50 rounded-xl flex items-center justify-center text-emerald-200 shadow-sm">
               <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
             </div>
          )}
          <h2 class="text-xl font-bold text-slate-800 group-hover:text-emerald-600 transition-colors line-clamp-2">{post.title}</h2>
          <p class="text-slate-500 line-clamp-2 text-sm flex-grow">{post.custom_excerpt || post.excerpt}</p>
          <div class="mt-4 pt-4 border-t border-slate-100 w-full flex justify-between items-center">
             <span class="text-emerald-600 font-semibold text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
               Start <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
             </span>
             {post.tags?.some(tag => tag.name === 'A1' || tag.name === 'A2' || tag.name === 'B1' || tag.name === 'B2') && (
               <span class="bg-emerald-100 text-emerald-800 text-xs px-2 py-1 rounded font-bold">
                 {post.tags.find(tag => tag.name === 'A1' || tag.name === 'A2' || tag.name === 'B1' || tag.name === 'B2')?.name}
               </span>
             )}
          </div>
        </a>
      ))}
    </div>
  )}

  <script>
    // Client-side tag filtering for Pocketbase Worksheets
    document.addEventListener('DOMContentLoaded', () => {
      const filterBtns = document.querySelectorAll('.filter-btn');
      const cards = document.querySelectorAll('.worksheet-card');
      
      filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          // Update active states
          filterBtns.forEach(b => {
            b.classList.remove('bg-emerald-600', 'text-white', 'shadow-sm', 'active');
            b.classList.add('bg-white', 'text-slate-600');
          });
          btn.classList.add('bg-emerald-600', 'text-white', 'shadow-sm', 'active');
          btn.classList.remove('bg-white', 'text-slate-600');
          
          const filter = btn.getAttribute('data-filter') || 'all';
          
          cards.forEach((cardEl) => {
            const card = cardEl as HTMLElement;
            const tags = card.getAttribute('data-tags') || '';
            if (filter === 'all' || tags.includes(filter)) {
              card.style.display = 'flex';
            } else {
              card.style.display = 'none';
            }
          });
        });
      });
    });
  </script>
</Layout>
