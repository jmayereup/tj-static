---
import Layout from '../layouts/Layout.astro';
import WorksheetFilter from '../components/WorksheetFilter.astro';
import { ghostClient } from '../lib/ghost';
import { downloadGhostAsset } from '../utils/downloadGhostAsset';

const lang = 'english'; // Default language

let posts: any[] = [];

try {
  posts = await ghostClient.posts.browse({
      limit: "12",
      filter: `tag:${lang}`,
      include: ['tags']
  });
  posts = await Promise.all(posts.map(async (post: any) => {
    let feature_image = post.feature_image;
    if (feature_image) {
      feature_image = await downloadGhostAsset(feature_image, post.slug);
    }
    return { ...post, feature_image };
  }));
} catch (e) {
  console.error("Failed to fetch Ghost posts", e);
}
---
<Layout title="Teacher Jake Worksheets - English" currentLang={lang}>
  <div class="mb-12 text-center pt-8">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-4 text-[#06422f] tracking-tight">English Worksheets</h1>
    <p class="text-lg text-[#4a5568] max-w-2xl mx-auto">Browse our collection of interactive English language learning materials, reading exercises, and quizzes.</p>
  </div>
  
  <WorksheetFilter currentLang={lang} currentTag="all" />
  
  {posts.length === 0 ? (
    <div class="bg-amber-50 text-amber-800 p-6 rounded-xl border border-amber-200 text-center shadow-sm">
      <p class="text-lg font-medium">No English worksheets found.</p>
      <p class="mt-2 opacity-80">Make sure your Ghost posts have the tag "English". Check your Ghost API Key in .env to ensure connection.</p>
    </div>
  ) : (
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {posts.map((post: any) => (
        <a href={`/worksheet/${post.slug}`} class="bg-white p-5 rounded-3xl shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] hover:shadow-xl transition-all duration-300 border border-[#f1f5f9] flex flex-col items-start gap-3 group translate-y-0 hover:-translate-y-1">
          {post.feature_image ? (
             <img src={post.feature_image} alt={post.title} class="w-full aspect-[4/3] object-cover rounded-2xl mb-1" />
          ) : (
             <div class="w-full h-48 bg-[#f0fdf4] rounded-xl flex items-center justify-center text-[#86efac]">
               <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
             </div>
          )}
          <h2 class="text-[1.35rem] font-bold text-[#2d3748] leading-tight line-clamp-2">{post.title}</h2>
          <p class="text-[#718096] line-clamp-3 text-[0.95rem] flex-grow leading-relaxed">{post.custom_excerpt || post.excerpt}</p>
          <div class="mt-4 w-full flex justify-between items-center">
             <span class="text-[#00a67d] font-semibold text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
               Start <svg class="w-4 h-4 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
             </span>
             {post.tags?.some((tag: any) => tag.name === 'A1' || tag.name === 'A2' || tag.name === 'B1' || tag.name === 'B2') && (
               <span class="bg-[#e6f6f1] text-[#00a67d] text-[11px] px-2 py-1 rounded font-bold tracking-widest uppercase">
                 {post.tags.find((tag: any) => tag.name === 'A1' || tag.name === 'A2' || tag.name === 'B1' || tag.name === 'B2')?.name}
               </span>
             )}
          </div>
        </a>
      ))}
    </div>
  )}
  
  <div class="flex justify-center mt-12 mb-8">
      <a href={`/${lang}/2`} class="px-6 py-2.5 bg-white border border-slate-200 rounded-lg text-[#06422f] hover:bg-[#f0fdf4] hover:border-[#86efac] font-semibold transition-colors flex items-center gap-2 shadow-sm">
        Next Page <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
      </a>
  </div>
</Layout>
